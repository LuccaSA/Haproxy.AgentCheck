{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Watch": {
    "System": {
      "RefreshIntervalInMs": 2000
    },
    "Counters": {
      "Process": "LINQPad8-x64",
      "Providers": [
        "Microsoft.AspNetCore.Hosting",
        "Microsoft.Data.SqlClient.EventSource",
        "System.Net.Http",
        "System.Runtime"
      ]
    }
  },
  "Rules": [
    {
      "Source": "System",
      "Name": "CPU",
      "Weight": {
        "SystemResponse": "Linear",
        "Min": 0,
        "Max": 90
      },
      "Maintenance": {
        "EnterThreshold": "90",
        "LeaveThreshold": "70"
      }
    },
    {
      "Source": "System",
      "Name": "IisRequests",
      "SystemResponse": "Linear",
      "Weight": {
        "SystemResponse": "Linear",
        "Min": 0,
        "Max": 40
      }
    },
    {
      "Source": "Counters",
      "Name": "System.Runtime/threadpool-queue-length",
      "Maintenance": {
        "EnterThreshold": "50",
        "LeaveThreshold": "40"
      }
    }
  ]
}
